{{#if produ}}
{{#each produ}}
<div class="container d-flex align-items-center justify-content-center gap-4">
    <div class="d-flex align-tems-center justify-content-center gap-4 w-50 h-50">
        <img src="{{this.thumbnail}}" alt="{{this.title}}" class="img-fluid" />
    </div>
    <div class="list-unstyled mt-3 rounded py-2 px-2 h-100 w-100">
        <h5 class="text-dark  mb-3 text-uppercase mb-4">{{this.title}}</h5>
        <h5 class="text-dark mb-4">{{this.category}}</h5>
        <h5 class="text-dark mb-4">{{this.price}}</h5>
        <h5 class="text-dark">{{this.description}}</h5>
    </div>
</div>
{{/each}}
</div>
{{/if}}
<div class="mt-5">
    {{> categorysMenu}}
</div>
<div class="container d-flex align-items-center justify-content-center mt-3 mb-3">
    <a href="/" class="btn btn-success w-50">Seguir comprando</a>
</div>
</div>
</div>