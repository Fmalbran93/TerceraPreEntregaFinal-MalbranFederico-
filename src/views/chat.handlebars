<div id="chat-container">
    <div id="chat-header">
        <h4>Chat Social</h4>
        <h6 id="nombreusuario">Usuario</h6>
        <h6 class="online">Online</h6>
        <img src="/img/logo.png" alt="Logo Customer Service"
            id="customer-service-logo">
    </div>
    <div id="chat-messages">
        <div class="message sender">
            <div class="user-info">
                <div class="sender-name">Conectado</div>
            </div>
            <div id="chat">...</div>
        </div>
    </div>
    <form id="formulario">
        <input type="text" name="mensaje" id="mensaje" placeholder="Escribe algo...">
        <button id="sendMessage" class="btn btn-success m-1">Enviar</button>
        <button id="clearChat" class="btn btn-danger">Limpiar Chat</button>
    </form>
</div>

<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="js/chat.js"></script>